{
  "name": "library",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "cli": "ts-node --esm --experimental-specifier-resolution=node src/index.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "husky",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "npm run changelog && git add CHANGELOG.md"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "本地知识库桌面应用",
  "dependencies": {
    "@ant-design/x": "^2.1.2",
    "@huggingface/transformers": "^3.8.1",
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.8",
    "@langchain/google-genai": "^2.1.3",
    "@langchain/langgraph": "^1.0.14",
    "@langchain/openai": "^1.2.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "antd": "^6.1.3",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "duck-duck-scrape": "^2.2.7",
    "langchain": "^1.2.3",
    "mammoth": "^1.11.0",
    "ml-pca": "^4.1.1",
    "pdf-parse": "^1.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "sqlite-vss": "^0.1.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^6.0.7",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.library.app",
    "productName": "LocalLibrary",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/sqlite-vss/**/*",
      "**/node_modules/onnxruntime-node/**/*"
    ]
  }
}
